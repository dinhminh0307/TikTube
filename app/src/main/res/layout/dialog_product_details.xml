<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dialogProductImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dialogProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Name"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Price: 0.00đ"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/dialogProductQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Available: 0"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/dialogProductReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Reviews: 0"
        android:textColor="@color/textColor" />

    <EditText
        android:id="@+id/dialogUserQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter quantity"
        android:inputType="number"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/dialogTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total: 0.00đ"
        android:textColor="@color/textColor"
        android:textStyle="bold" />
</LinearLayout>
