<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
    android:contentDescription="Back"
    android:layout_alignParentStart="true" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Direct messages"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/backButton"
        android:layout_centerHorizontal="true" />

    <!-- Add Button -->
    <ImageView
        android:id="@+id/addButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_add"
    android:contentDescription="Add"
    android:layout_alignParentEnd="true" />

    <!-- Empty State Icon -->
    <ImageView
        android:id="@+id/emptyStateIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        android:src="@drawable/notification_icon"
    android:contentDescription="Empty State Icon" />

    <!-- Empty State Text -->
    <LinearLayout
        android:id="@+id/emptyStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/emptyStateIcon"
        android:layout_centerHorizontal="true">

        <!-- Primary Message -->
        <TextView
            android:id="@+id/primaryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message your friends"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Secondary Message -->
        <TextView
            android:id="@+id/secondaryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share videos or start a conversation"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
