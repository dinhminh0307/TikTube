<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/bgColor"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Product Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/bgColor"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/adminProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_foreground" /> <!-- Placeholder image -->
    </androidx.cardview.widget.CardView>

    <!-- Product Name -->
    <TextView
        android:id="@+id/adminProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Product Name"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/adminProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $0.00"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <!-- Product Quantity -->
    <TextView
        android:id="@+id/adminProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 0"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <!-- Buttons for Update and Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/adminUpdateProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/gradient_start"
            android:text="Update"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/adminDeleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Delete"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
