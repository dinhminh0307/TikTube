<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#F5F5F5" /> <!-- Light Gray Background -->

    <!-- Rounded Corners -->
    <corners android:radius="16dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Light border color -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
